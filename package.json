{
  "name": "@devoxa/next-i18next-compress",
  "description": "Automatically compress locale keys for `next-i18next`",
  "version": "1.3.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/devoxa/next-i18next-compress"
  },
  "scripts": {
    "test": "jest",
    "format": "prettier --ignore-path='.prettierignore' --list-different --write .",
    "format:check": "prettier --ignore-path='.prettierignore' --check .",
    "lint": "eslint --ignore-path='.prettierignore' '{src,tests}/**/*.ts'",
    "build": "rm -rf dist/ && tsc",
    "preversion": "yarn build"
  },
  "eslintConfig": {
    "extends": "@devoxa"
  },
  "prettier": "@devoxa/prettier-config",
  "dependencies": {
    "colors": "1.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.21.8",
    "@babel/plugin-syntax-jsx": "7.21.4",
    "@babel/traverse": "7.23.2",
    "@babel/types": "7.21.5",
    "@devoxa/eslint-config": "3.0.11",
    "@devoxa/prettier-config": "2.0.2",
    "@swc/core": "1.3.100",
    "@swc/jest": "0.2.29",
    "@types/jest": "29.5.11",
    "@types/node": "18.19.3",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "prettier": "3.1.1",
    "typescript": "5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "18.19.0"
  }
}
